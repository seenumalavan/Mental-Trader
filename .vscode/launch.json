// Clean launch.json with Opening Range backtest configuration added.
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "App: FastAPI (uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.app:app",
                "--reload"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Script: Backfill Historical",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/backfill_historical.py",
            "console": "integratedTerminal",
            "args": [
                "--inputs",
                "NIFTY",
                "--timeframe",
                "1m",
                "--limit",
                "500"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Script: Backtest Scalper Day (All Modes)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/backtest_scalper_day.py",
            "console": "integratedTerminal",
            "args": [
                "--symbol",
                "NIFTY",
                "--date",
                "2025-01-17",
                "--mode",
                "all",
                "--warmup-bars",
                "80"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Script: Backtest Intraday",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/backtest_intraday.py",
            "console": "integratedTerminal",
            "args": [
                "--symbol",
                "${input:intradaySymbol}",
                "--date",
                "${input:intradayDate}",
                "--mode",
                "${input:intradayMode}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Script: Backtest Opening Range",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/backtest_opening_range.py",
            "console": "integratedTerminal",
            "args": [
                "--symbol",
                "${input:openingRangeSymbol}",
                "--date",
                "${input:openingRangeDate}",
                "--mode",
                "${input:openingRangeMode}",
                "--timeframe",
                "${input:openingRangeTimeframe}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "OPENING_RANGE_ENABLED": "true"
            }
        }
    ],
    "inputs": [
        {
            "id": "intradaySymbol",
            "type": "promptString",
            "description": "Enter symbol (e.g. NIFTY)",
            "default": "NIFTY"
        },
        {
            "id": "intradayDate",
            "type": "promptString",
            "description": "Enter date (YYYY-MM-DD)",
            "default": "2025-01-17"
        },
        {
            "id": "intradayMode",
            "type": "pickString",
            "description": "Select mode",
            "options": [
                "replay",
                "performance",
                "diagnose"
            ],
            "default": "replay"
        },
        {
            "id": "openingRangeSymbol",
            "type": "promptString",
            "description": "Enter symbol (e.g. NIFTY)",
            "default": "NIFTY"
        },
        {
            "id": "openingRangeDate",
            "type": "promptString",
            "description": "Enter date (YYYY-MM-DD)",
            "default": "2025-01-17"
        },
        {
            "id": "openingRangeMode",
            "type": "pickString",
            "description": "Select mode",
            "options": [
                "replay",
                "range",
                "diagnose",
                "performance"
            ],
            "default": "replay"
        },
        {
            "id": "openingRangeTimeframe",
            "type": "pickString",
            "description": "Primary timeframe",
            "options": [
                "1m",
                "3m",
                "5m"
            ],
            "default": "5m"
        }
    ]
}