# Upstox API Configuration (Primary)
UPSTOX_ACCESS_TOKEN=your_upstox_access_token_here
UPSTOX_API_KEY=your_upstox_api_key_here
UPSTOX_API_SECRET=your_upstox_api_secret_here

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/scalper

# Legacy Broker Configuration (Fallback)
BROKER_WS_URL=wss://broker-ws.example
BROKER_REST_URL=https://api.broker.example
BROKER_API_KEY=your_api_key
BROKER_API_SECRET=your_api_secret

# Trading Configuration
WATCHLIST=RELIANCE,INFY,ICICIBANK
WARMUP_BARS=300
EMA_SHORT=8
EMA_LONG=21

# Timeframe Configuration
SCALP_PRIMARY_TIMEFRAME=1m
SCALP_CONFIRM_TIMEFRAME=5m
SCALP_ENABLE_CONFIRM_FILTER=true   # set to false to disable higher timeframe trend gate
INTRADAY_PRIMARY_TIMEFRAME=5m
INTRADAY_CONFIRM_TIMEFRAME=15m
INTRADAY_ENABLE_CONFIRM_FILTER=true # set to false to disable higher timeframe trend gate

# Notifications
NOTIFIER_WEBHOOK=
APP_PORT=8000

# SMTP Email (Gmail)
SMTP_ENABLE=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_gmail_username
SMTP_PASSWORD=your_gmail_app_password   # Use App Password, not raw account password
SMTP_FROM=alerts@example.com
SMTP_TO=recipient@example.com