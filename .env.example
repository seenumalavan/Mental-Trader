# .env.example for Mental-Trader
# Copy this file to .env and fill in your secrets and configuration values

# Database
DATABASE_URL=sqlite:///mental_trader.db

# Upstox API
UPSTOX_API_KEY=
UPSTOX_API_SECRET=
UPSTOX_REDIRECT_URI=
UPSTOX_AUTH_URL=https://api.upstox.com/index/dialog/authorize

# Trading
WARMUP_BARS=2400
SCALPER_EMA_SHORT=8
SCALPER_EMA_LONG=21
INTRADAY_EMA_SHORT=8
INTRADAY_EMA_LONG=21

# Notifications
NOTIFIER_WEBHOOK=

# Email / SMTP (Gmail)
SMTP_ENABLE=False
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=

# Scalper configuration
SCALP_PRIMARY_TIMEFRAME=1m
SCALP_CONFIRM_TIMEFRAME=5m
SCALP_ENABLE_TREND_CONFIRMATION=True
SCALP_ENABLE_SIGNAL_CONFIRMATION=True

# Intraday configuration
INTRADAY_PRIMARY_TIMEFRAME=5m
INTRADAY_CONFIRM_TIMEFRAME=15m
INTRADAY_ENABLE_TREND_CONFIRMATION=True
INTRADAY_ENABLE_SIGNAL_CONFIRMATION=True

# Confirmation pipeline
CONFIRMATION_RECENT_BARS=750
CONFIRMATION_REQUIRE_CPR=False

# Option Trading
OPTION_ENABLE=True
OPTION_LOT_SIZE=50
OPTION_RISK_CAP_PER_TRADE=7500.0
OPTION_OI_MIN_PERCENTILE=60
OPTION_SPREAD_MAX_PCT_SCALPER=0.015
OPTION_SPREAD_MAX_PCT_INTRADAY=0.025
OPTION_DEBOUNCE_SEC=30
OPTION_DEBOUNCE_INTRADAY_SEC=60
OPTION_COOLDOWN_SEC=300

# Sentiment Analysis
SENTIMENT_ENABLE=True
SENTIMENT_UPDATE_INTERVAL_MINUTES=5
SENTIMENT_NEWS_HOURS_BACK=6

# News API Keys
NEWSAPI_KEY=
ALPHA_VANTAGE_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Sentiment Analysis Settings
SENTIMENT_MODEL=hybrid
SENTIMENT_MIN_CONFIDENCE=0.6
SENTIMENT_THRESHOLD=0.3

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Sentiment Filter
SENTIMENT_FILTER_ENABLE_EXTREME_BLOCK=True
SENTIMENT_FILTER_ENABLE_ALIGNMENT=True
SENTIMENT_FILTER_EXTREME_THRESHOLD=0.8

# Data Maintenance
DATA_RETENTION_DAYS=10
GAP_FILL_ENABLED=True
CLEANUP_ENABLED=True
MAINTENANCE_INTERVAL_HOURS=24

# Application
APP_PORT=8000
AUTO_START_SCALPER=False
AUTO_START_SCALPER_INSTRUMENTS=nifty
AUTO_START_INTRADAY=False
AUTO_START_INTRADAY_INSTRUMENTS=indices